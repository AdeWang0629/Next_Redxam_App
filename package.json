{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "client": "cd packages/frontend && yarn dev",
    "client:install": "cd packages/frontend && yarn",
    "server": "cd packages/backend && yarn start",
    "server:install": "cd packages/backend && yarn",
    "install": "concurrently \"yarn run client:install\" \"yarn run server:install\"",
    "start": "concurrently \"yarn run client\" \"yarn run server\""
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "lerna": "^4.0.0"
  },
  "dependencies": {
    "stripe": "^8.201.0"
  }
}
